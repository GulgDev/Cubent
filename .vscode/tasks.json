{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PyInstaller: build exe",
            "type": "shell",
            "command": "pyinstaller",
            "args": [
                "src/main.py",
                "-n=cubent",
                "-i=${workspaceFolder}/icon.ico",
                "-y",
                "-F",
                "--add-data='resources/*;resources'",
                "--add-data='std/*;std'"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        }
    ]
}